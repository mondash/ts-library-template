{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.eol": "\n",
  "eslint.debug": true,
  "eslint.nodePath": ".yarn/sdks",
  "eslint.options": {
    "configFile": "./config/.eslintrc.yml",
    "ignorePath": "./config/.eslintignore"
  },
  "eslint.packageManager": "yarn",
  "markdownlint.config": {
    // Provides compatibility for changesets (decent fix, not great)
    "first-line-heading": {
      "front_matter_title": "."
    },
    // Provides compatibility for changelogs (and is just good in general)
    "no-duplicate-header": {
      "siblings_only": true
    }
  },
  "prettier.configPath": "./config/.prettierrc.json",
  "prettier.ignorePath": "./config/.prettierignore",
  "prettier.prettierPath": ".yarn/sdks/prettier/index.js",
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsdk": ".yarn/sdks/typescript/lib"
}
