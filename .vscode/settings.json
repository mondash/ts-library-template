{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.eol": "\n",

  "eslint.options": {
    "overrideConfigFile": "./config/.eslintrc.yml",
    "ignorePath": "./config/.eslintignore"
  },
  "eslint.debug": true,
  "eslint.packageManager": "yarn",
  "eslint.useESLintClass": true,

  // Markdown rules are not enforced, but following them is highly encouraged
  "markdownlint.config": {
    // Provides compatibility for changesets (decent fix, not great)
    "first-line-heading": {
      "front_matter_title": "."
    },
    // Provides compatibility for changelogs (and is also good in general)
    "no-duplicate-header": {
      "siblings_only": true
    }
  },

  "prettier.configPath": "./config/.prettierrc.json",
  "prettier.ignorePath": "./config/.prettierignore",

  "typescript.tsdk": "./node_modules/typescript/lib"
}
