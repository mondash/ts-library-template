{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../build/tests",
    "types": ["node", "jest"],

    "paths": {
      "@test": ["../test"],
      "@test/*": ["../test/*"]
    }
  },
  "include": ["../**/*.test.ts", "../**/__tests__", "../test"],
  "exclude": [
    "../.git",
    "../build",
    "../coverage",
    "../dist",
    "../node_modules"
  ],
  "references": [
    { "path": "./tsconfig.src.json" },
    { "path": "./tsconfig.tools.json" }
  ]
}
